# OpenRouter LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_MODEL=deepseek/deepseek-chat
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=150

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgresql-service:5432/training_db
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOST=postgresql-service
DB_PORT=5432
DB_NAME=training_db

# Redis Configuration
REDIS_URL=redis://redis-service:6379/0
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# S3/MinIO Configuration
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=911-training-recordings
S3_REGION=us-east-1
S3_SECURE=false

# Coqui TTS Configuration
COQUI_TTS_URL=http://coqui-tts-service:5002
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_VOCODER=vocoder_models/en/ljspeech/hifigan_v2
TTS_SAMPLE_RATE=22050

# Application Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4
FRONTEND_PORT=3000
LOG_LEVEL=INFO
ENVIRONMENT=development

# Audio Processing
AUDIO_CODEC=opus
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BITRATE=24000
AUDIO_FRAME_DURATION_MS=20

# Session Configuration
SESSION_TTL=3600
MAX_CONCURRENT_CALLS=50
RATE_LIMIT_LLM_PER_MINUTE=10

# CORS (for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
