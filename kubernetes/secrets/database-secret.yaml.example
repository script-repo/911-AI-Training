---
# Database Secret Example
# DO NOT commit actual secrets to version control
# Copy this file to database-secret.yaml and replace placeholders
apiVersion: v1
kind: Secret
metadata:
  name: database-secret
  namespace: 911-training
  labels:
    app: 911-training-simulator
    component: database
type: Opaque
data:
  # Base64 encoded database credentials
  # To encode: echo -n "your_value" | base64

  # Database username (base64 of "postgres")
  POSTGRES_USER: cG9zdGdyZXM=

  # Database password - CHANGE THIS!
  # Example: base64 of "your_secure_password_here"
  POSTGRES_PASSWORD: eW91cl9zZWN1cmVfcGFzc3dvcmRfaGVyZQ==

  # Full database URL - CHANGE THIS!
  # Format: postgresql://postgres:your_password@postgresql-service:5432/training_db
  # Example: base64 of "postgresql://postgres:your_secure_password_here@postgresql-service:5432/training_db"
  DATABASE_URL: cG9zdGdyZXNxbDovL3Bvc3RncmVzOnlvdXJfc2VjdXJlX3Bhc3N3b3JkX2hlcmVAcG9zdGdyZXNxbC1zZXJ2aWNlOjU0MzIvdHJhaW5pbmdfZGI=
