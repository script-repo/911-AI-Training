---
# S3/MinIO Secret Example
# DO NOT commit actual secrets to version control
# Copy this file to s3-secret.yaml and replace placeholders
apiVersion: v1
kind: Secret
metadata:
  name: s3-secret
  namespace: 911-training
  labels:
    app: 911-training-simulator
    component: backend
type: Opaque
data:
  # Base64 encoded S3/MinIO credentials
  # To encode: echo -n "your_value" | base64

  # S3 Access Key - CHANGE THIS!
  # Example: base64 of "your_access_key_here"
  S3_ACCESS_KEY: eW91cl9hY2Nlc3Nfa2V5X2hlcmU=

  # S3 Secret Key - CHANGE THIS!
  # Example: base64 of "your_secret_key_here"
  S3_SECRET_KEY: eW91cl9zZWNyZXRfa2V5X2hlcmU=
